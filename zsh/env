# Set path
PATH=~/bin:~/dotfiles/bin:/usr/local/bin:/usr/local/sbin:$PATH
typeset -U path  # Remove duplicate entries from PATH
export PATH

# Set charset to UTF8
# Usually not needed - macOS and Linux set this by default
# Uncomment if you see encoding issues (e.g., broken characters, emoji problems)
# May be required on FreeBSD or minimal server environments
#export LANG=en_US.UTF-8

# Set default editor to nvim, fallback to vim
export EDITOR="$(command -v nvim || command -v vim || echo vi)"
