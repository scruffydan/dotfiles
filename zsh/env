# Set path
PATH=/opt/homebrew/bin:/opt/homebrew/sbin:~/bin:~/dotfiles/bin:/usr/local/bin:/usr/local/sbin:$PATH
typeset -U path  # Remove duplicate entries from PATH
export PATH

# Set charset to UTF8
#export LANG=en_US.UTF-8

# Set default editor to nvim, fallback to vim
export EDITOR="$(command -v nvim || command -v vim)"
