[core]
  excludesfile = ~/dotfiles/git/gitignore_global
[init]
  defaultBranch = main
[push]
  default = simple
[pull]
  rebase = false
[diff]
  colorMoved = default
[rerere]
  enabled = true
[merge]
  tool = nvimdiff
  conflictstyle = diff3
[mergetool "nvimdiff"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool]
  prompt = false
  keepBackup = false
[diff]
  tool = nvimdiff
[difftool]
  prompt = false
[alias]
  # Pretty log with train tracks.
  l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(green) %an, %ar%Creset'
  s = status -s
  a = add -A
  g = gc --prune=now --aggressive
